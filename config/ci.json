
{
  "circleci": {
    "heroku": 1
  },
  "droneci": {
    "pmbp": true,
    "build": {
      "": [
        "pwd",
        "cat .ciconfigdockershareddir",
        "ls `cat .ciconfigdockershareddir`"
      ],
      "_": [
        "cp -R . `cat .ciconfigdockershareddir`/app",
        {
          "command": "cd app && ls && pwd",
          "nested": true,
          "shared_dir": true
        },
        {
          "command": "make deps",
          "nested": true,
          "shared_dir": true,
          "wd": "app"
        },
        {
          "command": "./perl local/bin/pmbp.pl --install-module IO::Interface::Simple",
          "nested": true,
          "shared_dir": true,
          "wd": "app"
        },
        {
          "command": "./perl -MIO::Interface::Simple -e 'print IO::Interface::Simple->new (q{eth0})->address' > ipaddr",
          "nested": true,
          "shared_dir": true,
          "wd": "app"
        },
        {
          "command": "cat ipaddr",
          "nested": true,
          "shared_dir": true,
          "wd": "app"
        },
        "echo foo > bar"
      ]
    },
    "tests": {
      "test1": [
        "cat bar",
        "ls"
      ],
      "test2": [
        "docker version"
      ]
    },
    "docker": {
      "nested": true
    }
  }
}
